@using SM.Entity.Entity
<div class="modal shadow" id="UpdateDetailsModel">
   <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
         <div class="modal-header">
            <p class="modal-title" id="popup-loginLabel">
               <b>Edit Details </b>
            </p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body">
            <form data-ajax="true" data-ajax-method="get" data-ajax-update="#example2" data-ajax-mode='replace' data-ajax-url="@Url.Action("Index","Users")">
               <input type="hidden" id="id" class="form-control" value="@Model.UserId" />
               <div class="row mt-3">
                  <input type="text" class="form-control" id="idFirstName" placeholder="First Name" value="@Model.FirstName">
               </div>
               <div class="row mt-3">
                  <input type="text" class="form-control" id="idLastName" placeholder="Last Name" value="@Model.Lastname">
               </div>
               <div class="row mt-3">
                  <input type="email" class="form-control" id="idEmail" placeholder="Email Address" value="@Model.EmailAddress">
               </div>
            </form>
            <br>
            <button type="button" class="btn btn-info btn-block" onclick="fnPostUpdateDetail()" data-dismiss="modal">
               Update
            </button>
         </div>
      </div>
   </div>
</div>